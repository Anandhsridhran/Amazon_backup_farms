<%= simple_form_for(@inventory_report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :barn_id %>
    <%= f.input :report_date %>
    <%= f.input :total_pig_deaths %>
    <%= f.input :cause_of_death %>
    <%= f.input :total_pigs_treated %>
    <%= f.input :medicine_given %>
    <%= f.input :dosage %>
    <%= f.input :how_administered %>
    <%= f.input :user_initials %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
