<div class="span4">
	<div class="box">
		<div class="box-header">
		 	<span class="title"><%= @user.name %></span>
		</div>
		<div class="box-content">
		  <table class="table table-normal">
		    <tbody>
		      <tr>
            <td>Role</td>
            <td><%= @user.owner_type %></td>
          </tr>
          <tr>
            <td>Username</td>
            <td><%= @user.username %></td>
          </tr>
          <tr>
          	<td>Email</td>
          	<td><%= mail_to @user.email %></td>
          </tr>
          <tr>
            <td>Manages</td>
            <td>
              <%=  @managed_objects.map {|o| o.name }.join(", ") %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


