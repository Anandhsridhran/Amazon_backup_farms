<div class="row-fluid">
  <div class="span6">

    <div class="box">
      <div class="box-header">
        <span class="title">Farm Details</span>
      </div>

      <div class="box-content">

        <%= form_for(@farm, html: {class: "fill-up"}) do |f| %>
          <% if @farm.errors.any? %>
            <div id="error_explanation" class="field_with_errors">
              <h2><%= pluralize(@location.errors.count, "error") %> prohibited this farm from being saved:</h2>

              <ul>
                <% @farm.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row-fluid">
            <div class="span6">
              <ul class="padded separate-sections">
                <li class="input">
                  <%= f.label :name %>
                  <%= f.text_field :name %>
                </li>
                <li class="input">
                  <%= f.label :street_address %>
                  <%= f.text_field :street_address %>
                </li>
                <li class="input">
                  <%= f.label :city %>
                  <%= f.text_field :city %>
                </li>
                <li class="input">
                  <%= f.label :state_or_province %>
                  <%= f.text_field :state %>
                </li>
                <li class="input">
                  <%= f.label :postal_code %>
                  <%= f.text_field :postal_code %>
                </li>
                <li>
                  <%= f.label :hog_owner %>
                  <%= f.collection_select(:hog_owner_id,  @hog_owners,  :id, :name, {:prompt => true}) %>
                </li>
              </ul>
            </div>
          </div>
          <div class="form-actions">
            <div class="span4">
              <%= f.submit "Submit", :class => "btn btn-blue" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>