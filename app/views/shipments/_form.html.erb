<%= simple_form_for(@shipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :barn_id %>
    <%= f.input :shipment_date %>
    <%= f.input :total_pigs %>
    <%= f.input :total_doa %>
    <%= f.input :pig_supplier %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
